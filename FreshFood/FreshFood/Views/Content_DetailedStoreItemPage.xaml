                x:Key="AnimateItem"
                Target="{x:Reference DetailedItemContent}">
            <xamanimation:TranslateToAnimation TranslateY="0" Duration="2000"/>
        </xamanimation:StoryBoard>
    </ContentPage.Resources>
  
    <ContentPage.Triggers>
        <EventTrigger Event="Appearing">
            <xamanimation:BeginAnimation     
                Animation="{StaticResource AnimateItem}" />
        </EventTrigger>
    </ContentPage.Triggers>
    -->
    <ContentPage.Content>

        <Grid RowSpacing="0" ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <pancakeview:PancakeView 
                x:Name="DetailedItemContent"
                Grid.Row="0"
                CornerRadius="10" 
                BackgroundColor="{Binding Item.BackgroundColor}" 
                VerticalOptions="Start"
                Padding="20"
                HasShadow="True"
                HeightRequest="150" WidthRequest="100">

                <StackLayout Orientation="Vertical">
                    <Image Source="{Binding Item.ImageSource}" 
                           sharedTransitions:Transition.Name="SelectedFreshItem"/>
                    <Label Text="{Binding Item.Name}"/>
                </StackLayout>
            </pancakeview:PancakeView>
        </Grid>
    </ContentPage.Content>
</ContentPage>